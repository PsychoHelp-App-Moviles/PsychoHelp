<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".psychologist.PsychoProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Perfil del psicólogo"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/patient_card_view"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        card_view:cardBackgroundColor="#F3F9FF"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombres y apellidos"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fullNameText"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textview_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="emailText"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textview_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="birthDateText"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero teléfono"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textview_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phoneNumberText"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formación"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textview_formation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="formationText"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre mí"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textview_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aboutMeText"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:onClick="openDialogPsychologist"
        android:id="@+id/edit_psycho_profile_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#89C5CC"
        android:text="Editar Perfil"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>